- if @current_game.ongoing?
  :javascript
    $(function() {
      $("#countdown").countdown({until: new Date(#{(@current_game.game_ends-1.month).strftime("%Y, %m, %d, %H, %M, %S")}), description: "left to survive!"})
    });
- else
  :javascript
    $(function() {
      $("#countdown").countdown({until: new Date(#{(@current_game.game_begins-1.month).strftime("%Y, %m, %d, %H, %M, %S")}), description: "until the game begins!"})
    });
